<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <br />
      <br />
      <%= image_tag @store.avatar(:medium), size: "100x100", class: "center"%>
      <div class="store_name">
        <%= @store.name %>
      </div>

      <% if @store.opened?%>
        <div class="store_state_closed">
          <p class="center">营业中</p>
        </div>
      <% else %>
        <div class="store_state_closed">
          <p class="center">休息中</p>
        </div>
      <% end %>

      <p class="center">
        <%= @store.description.html_safe if @store.description.present?%>
        <p> 配送范围:<%= @store.deliver_area.html_safe if @store.deliver_area.present?%> </p>
        <br/>  起送价:<%= @store.free_deliver_price %>
    </p>
  </div>
  <div class="span8 backgroundcolor">
      <% @products.each_with_index do |product, index|%>
        <% if (index % 4) == 0 %>
          <br />
        <% end %>

        <%= render "product", product: product%>

      <% end %>

        <%= paginate @products%>
    </div>
  </div>
</div>

<!--product Modal -->
<div id="product_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">详情</h3>
  </div>
  <div class="modal-body" id="product_modal_body">
    <p>载入中...</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    <button class="btn btn-primary" id="product_modal_submit">来一份</button>
  </div>
</div>

