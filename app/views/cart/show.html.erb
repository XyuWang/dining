<div class="container">
  <table class="table">
    <tr>
      <th>编号</th>
      <th>名称</th>
      <th>数量</th>
      <th>总价</th>
    </tr>
    <% @cart.line_items.each_with_index do |line_item, index|%>
      <tr>
        <td> <%= index + 1 %></td>
        <td> <%= line_item.product.title %></td>
        <td> <%= line_item.quantity %></td>
        <td> <%= line_item.quantity * line_item.price %></td>
        <td><%= link_to "移除", cart_path(line_item_id: line_item), method: :delete, class: "btn"%></td>
      </tr>
    <% end %>
  </table>
  <div class="pull-right">
    <%= link_to "结帐", "", class: "btn btn-large btn-primary"%>
  </div>
</div>
