<div class="container">
  <div class="table">
    <% @stores.each do |store| %>
      <tr>
        <%= render "store", store: store%>
      </tr>
    <% end %>
  </div>

<!--product Modal -->
<div id="product_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">详情</h3>
  </div>
  <div class="modal-body" id="product_modal_body">
    <p>载入中...</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    <button class="btn btn-primary" id="product_modal_submit">来一份</button>
  </div>
</div>

