<div class="container">
  <table class="table table-striped table-bordered">
    <caption>商家列表</caption>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>商店名称</th>
    </tr>
    <% @storers.each do |storer|%>
      <tr>
        <td><%= storer.id%></td>
        <td><%= storer.email%></td>
        <td><%= storer.store.name if storer.store%></td>
        <td><%= button_to "删除", admin_storer_path(storer), method: :delete,  confirm:"你确定要删除么?", class:"btn"%></td>
      </tr>
    <% end %>
  </table>

<%= form_tag admin_storers_path, method: "post" do%>
  <%= label_tag :add_new_storer, "增加新商家"%>
  <%= select_tag :user_id, options_from_collection_for_select(User.all, "id", "email")%>
  <%= submit_tag "确定", class:"btn"%>
<% end %>

</div>
