<div class="container">
  <ul class="nav nav-tabs">
    <li>
      <a href="<%= admin_path%>">网站状态</a>
    </li>
    <li><a href="<%= admin_storers_path%>">商家列表</a></li>
    <li><a href="<%= admin_stores_path%>">商店列表</a></li>
