<!DOCTYPE html>
<html>
  <head>
    <title><%= @store || "吃货零秒"%></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <link href="http://jamescryer.github.io/grumble.js/css/grumble.min.css?v=5" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <%= render "layouts/navbar" %>

      <div class="container">
        <!-- alert and notice begin -->
        <% if flash[:alert].present? %>
          <div class="alert alert-error fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4></h4>    <strong><%= flash[:alert]%></strong>
          </div>
        <% end %>
        <% if flash[:notice].present? %>
          <div class="alert alert-success fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <h4></h4>    <strong><%= flash[:notice]%></strong>
          </div>
        <% end %>
        <!-- alert and notice end-->
      </div>
      <div class="content">
        <%= yield %>

      </div>

      <div class="container">
        <div class="footer">
          <ul class="nav nav-list">
            <li class="divider"></li>
          </ul>
          <p align="center">
            <a href="/contact">联系我们</a>
            Copyright ©2013 chihuo0s.com, All Rights Reserved.
          </p>
        </div>
      </div>
    </div>
    <script src="http://jamescryer.github.io/grumble.js/js/jquery.grumble.min.js?v=6"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
  </body>
</html>
