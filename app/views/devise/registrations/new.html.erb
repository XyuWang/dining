<div class="container">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span8">
        <% urls = ["login0.jpg", "login1.jpg", "login2.jpg"]%>
        <%= image_tag urls.sample, size: "500x350"%>
        <p class="span6 offset2">
          <br />
          <br />
          <br />
          不要离开我,我们永远在一起...&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;——食物说
        </p>
      </div>
      <div class="span4">


        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <% resource.errors.full_messages.each do |error|%>
            <p style="color:red; font-size: 20px"> <%= error %> </p>
          <% end %>
          <fieldset>
            <div id="legend" class="">
              <legend class="">注册</legend>
            </div>

            <div class="control-group">
              <!-- Prepended text-->
              <label class="control-label"></label>
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">邮箱</span>
                  <%= f.email_field :email, :autofocus => true, class: "span6", placeholder: "请输入注册邮箱", email: true, requred: true %></div>
              </div>
            </div>


            <div class="control-group">
              <label class="control-label"></label>
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">密码</span>
                  <%= f.password_field :password_confirmation, class: "span6", placeholder: "最小6个字符哦", required: true,  minlength: "6" %></div>
              </div>
              <p class="help-block"></p>
            </div>

            <div class="control-group">
              <label class="control-label"></label>
              <div class="controls">
                <div class="input-prepend">
                  <span class="add-on">确认</span>
                  <%= f.password_field :password, class: "span6", placeholder: "请再次输入密码", required: true, minlength:6%></div>
              </div>
              <p class="help-block"></p>
            </div>



            <div class="control-group">
              <label class="control-label"></label>
              <div class="controls">
                <%= f.submit "注册", class: "btn btn-success"%>
              </div>
            </div>
          </fieldset>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
