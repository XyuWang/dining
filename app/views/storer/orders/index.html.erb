<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=B60f0592245e68162ffaf81c72bd1250"></script>

<div class="container">

  <ul class="nav nav-tabs">
    <li>
      <a href="<%= storer_path%>">商店状态</a>
    </li>
    <li><a href="<%= storer_products_path%>">产品列表</a></li>
    <li class="active"><a href="<%= storer_orders_path%>">订单列表</a></li>
  </ul>


  <table class="table">
    <tr>
      <th>订单ID</th>
      <th>商品</th>
      <th>总价格</th>
      <th>联系方式</th>
      <th>留言</th>
      <th>状态</th>
      <th></th>
      <th></th>
    </tr>
    <% @orders.each do |order| %>
      <% if order.pending? %>
        <tr class="info">
          <td><%= order.id %></td>
          <td><%= render "order", order: order %></td>
          <td><%= order.total_price %></td>
          <td><%= render "contact", order: order %></td>
          <td><%= order.message %></td>
          <td>已下单</td>
          <td><%= link_to "取消订单", storer_order_close_path(order), method: :put, class: "btn", confirm: "确认要取消订单么"%></td>
          <td><%= link_to "接受订单", storer_order_accept_path(order), method: :put, class: "btn btn-danger"%></td>
        </tr>

      <% elsif order.accepted? %>
        <tr class="info">
          <td><%= order.id %></td>
          <td><%= render "order", order: order %></td>
          <td><%= order.total_price %></td>
          <td><%= render "contact", order: order %></td>
          <td><%= order.message %></td>
          <td>已接受订单</td>
          <td><%= link_to "发货", storer_order_deliver_path(order), method: :put, class: "btn btn-danger"%></td>
          <td></td>
        </tr>


      <% elsif order.delivered? %>
        <tr class="success">
          <td><%= order.id %></td>
          <td><%= render "order", order: order %></td>
          <td><%= order.total_price %></td>
          <td><%= render "contact", order: order %></td>
          <td><%= order.message %></td>
          <td>已发货</td>
          <% if order.store_evaluated? %>
          <td>已评价</td>
          <td></td>
        <% else %>
          <td><%= link_to "好评", storer_order_custom_add_credit_path(order), class: "btn", method: :put%></td>
          <td><%= link_to "差评", storer_order_custom_sub_credit_path(order), class: "btn", method: :put%></td>
        <% end %>
      </tr>

        <% else order.closed? %>
          <tr class="error">
            <td><%= order.id %></td>
            <td><%= render "order", order: order %></td>
            <td><%= order.total_price %></td>
            <td><%= render "contact", order: order %></td>
            <td><%= order.message %></td>
            <td>已关闭</td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
    </table>
    <%= paginate @orders %>
  </div>

<div id="map" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">路线</h3>
  </div>
  <div class="modal-body">
    <div id="map_body"></div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
  </div>
</div>

<style type="text/css">
  #map_body {width: 500px;height: 300px;overflow: hidden;margin:0;}
</style>

<script>
  $(document).ready(function(){
    setTimeout("window.location='/storer/orders';",60000);
  });
</script>
