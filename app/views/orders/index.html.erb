<div class="container">
  <table class="table">
    <tr>
      <th>编号</th>
      <th>产品</th>
      <th>总价</th>
      <th>状态</th>
    </tr>
    <% @orders.each_with_index do |order, index|%>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= order.line_items.count%></td>
        <td></td>
        <% if order.pending? %>
          <td>已下单</td>
        <% elsif order.closed? %>
          <td>已关闭</td>
        <% end%>
      </tr>
    <% end %>
  </table>
</div>
